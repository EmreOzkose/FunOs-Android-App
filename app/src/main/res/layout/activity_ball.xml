<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context="com.example.erama.myapplication.Events.GeneralEvents.Ball">

    <ScrollView
        android:id="@+id/swBall"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <LinearLayout
            android:id="@+id/llBall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <GridLayout
                android:id="@+id/mainLayoutBall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="UselessParent">

                <ImageView
                    android:id="@+id/imageAmericanFootball"
                    android:layout_width="185dp"
                    android:layout_height="155dp"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:contentDescription="@string/sAmericanFootball"
                    app:srcCompat="@drawable/american_football" />

                <TextView
                    android:id="@+id/lblAmericanFootball"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:text="@string/sAmericanFootball"
                    android:textAlignment="center" />

                <ImageView
                    android:id="@+id/imageBasketball"
                    android:layout_width="185dp"
                    android:layout_height="155dp"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:contentDescription="@string/sBasketball"
                    app:srcCompat="@drawable/basketball" />

                <TextView
                    android:id="@+id/lblbasketball"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:text="@string/sBasketball"
                    android:textAlignment="center" />

                <ImageView
                    android:id="@+id/imageGolf"
                    android:layout_width="185dp"
                    android:layout_height="155dp"
                    android:layout_column="0"
                    android:layout_row="4"
                    android:contentDescription="@string/sGolf"
                    app:srcCompat="@drawable/golf" />

                <TextView
                    android:id="@+id/lblGolf"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="5"
                    android:text="@string/sGolf"
                    android:textAlignment="center" />

                <ImageView
                    android:id="@+id/imageTennis"
                    android:layout_width="185dp"
                    android:layout_height="155dp"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:contentDescription="@string/sTennis"
                    app:srcCompat="@drawable/tennis" />

                <TextView
                    android:id="@+id/lblTennis"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:text="@string/sTennis"
                    android:textAlignment="center" />

                <ImageView
                    android:id="@+id/imageFootball"
                    android:layout_width="185dp"
                    android:layout_height="155dp"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:contentDescription="@string/sFootball"
                    app:srcCompat="@drawable/foorball" />

                <TextView
                    android:id="@+id/lblFootball"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:contentDescription="@string/sFootball"
                    android:text="@string/sFootball"
                    android:textAlignment="center" />

            </GridLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
