<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cwMy_event"
        android:layout_width="match_parent"
        android:layout_height="255dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgOpponentPerson"
                    android:layout_width="100dp"
                    android:layout_height="125dp"
                    android:layout_alignTop="@+id/imgCurrentPerson"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="14dp"
                    android:layout_toEndOf="@+id/imgCurrentPerson"
                    android:layout_toRightOf="@+id/imgCurrentPerson"
                    android:contentDescription="@string/sSpace"
                    app:layout_constraintHorizontal_bias="0.8"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/background2" />

                <TextView
                    android:id="@+id/lblOpponentPerson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/imgOpponentPerson"
                    android:layout_alignRight="@+id/imgOpponentPerson"
                    android:layout_alignTop="@+id/lblCurrentPerson"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:contentDescription="@string/sSpace"
                    android:text="@string/sPlayer2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.75"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imgOpponentPerson"
                    app:layout_constraintVertical_bias="0.1" />

                <TextView
                    android:id="@+id/lblCurrentPerson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/imgCurrentPerson"
                    android:layout_alignStart="@+id/imgCurrentPerson"
                    android:layout_below="@+id/imgCurrentPerson"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/sPlayer1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.3"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imgCurrentPerson"
                    app:layout_constraintVertical_bias="0.106" />

                <ImageView
                    android:id="@+id/imgCurrentPerson"
                    android:layout_width="100dp"
                    android:layout_height="125dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="29dp"
                    android:layout_marginTop="14dp"
                    android:contentDescription="@string/sSpace"
                    app:layout_constraintHorizontal_bias="0.2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/background2" />
            </android.support.constraint.ConstraintLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>